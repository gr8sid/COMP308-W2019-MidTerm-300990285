<head>
<link rel="stylesheet" href="/Assets/header.css">
</head>
<% include ../partials/header.ejs %>
<body style="background-image: url('/Assets/images/brown.jpg'); background-repeat:no-repeat;  background-size: 100% 100%;>
   
    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3 class = "heading" style="text-align:center">Favourite Books List </h3><br>

          <a href="/books/add" class="btn btn-primary heading" style="font-size:20px"><i class="fa fa-plus"></i> Add a book</a>
          <br><br>
          <div class="table-responsive heading"> 
            <table class="table table-dark table-bordered table-striped table-hover" style="background-color: #CEF0D4;">
              <thead>
                <tr style="font-size:20px">
                  <th>Title</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td><%= books[count].Title %></td>
                  <td class="text-center heading2">$<%= books[count].Price %></td>
                  <td class="text-center heading2"><%= books[count].Author %></td>
                  <td class="text-center heading2"><%= books[count].Genre %></td>

                  <td class="text-center">
                    <a href="/books/<%= books[count]._id %>"
                        class="btn btn-primary" style="font-size:18px"><i class="fas fa-pencil-alt"></i> Edit</a>
                    </td>

                  <td class="text-center">
                    <a href="/books/delete/<%= books[count]._id %>"
                        class="btn btn-danger" style="font-size:18px"><i class="fas fa-trash-alt"></i> Delete</a>
                   
                  </td>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>
</body>
<% include ../partials/footer.ejs %>


